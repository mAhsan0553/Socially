<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccountActivity"
    android:background="@drawable/create_account_gradient_bg">

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/outline_arrow_back_24"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentStart="true">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Socially"
        android:text="@string/socially"
        android:textSize="40dp"
        android:textColor="@color/bg_white"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:textStyle="normal">

    </TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createanaccount"
        android:text="Create an account and Sign Up"
        android:textSize="15dp"
        android:textColor="@color/bg_white"
        android:layout_centerInParent="true"
        android:layout_below="@+id/Socially">

    </TextView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_below="@+id/createanaccount"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        app:civ_border_color="@color/black"
        android:src="@drawable/img_1"
        app:civ_border_width="1dp"
        android:layout_marginTop="10dp">


    </de.hdodenhof.circleimageview.CircleImageView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:text="@string/username"
        android:textSize="15dp"
        android:textColor="@color/bg_white"
        android:layout_below="@+id/image"
        android:layout_marginStart="20dp">
    </TextView>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username_edittext"
        android:layout_below="@+id/username"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:hint="@string/username"
        android:textColorHint="@color/bg_white"
        android:backgroundTint="@color/bg_white"
        android:textSize="14dp">

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yourname"
        android:text="@string/your_name"
        android:textSize="15dp"
        android:textColor="@color/bg_white"
        android:layout_below="@+id/username_edittext"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"

        >

    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/yourname_edittext"
        android:layout_below="@+id/yourname"
        android:layout_marginTop="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        android:hint="@string/first_name"
        android:textColorHint="@color/bg_white"
        android:backgroundTint="@color/bg_white"
        android:textSize="14dp">

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastname"
        android:text="@string/your_last_name"
        android:textSize="15dp"
        android:textColor="@color/bg_white"
        android:layout_below="@+id/yourname_edittext"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="20dp">

    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lastname_edittext"
        android:layout_below="@+id/lastname"
        android:layout_marginTop="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        android:hint="@string/your_last_name"
        android:textColorHint="@color/bg_white"
        android:backgroundTint="@color/bg_white"
        android:textSize="14dp">

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateofbirth"
        android:text="@string/date_of_birth"
        android:textSize="15dp"
        android:textColor="@color/bg_white"
        android:layout_below="@+id/lastname_edittext"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="20dp"
        >

    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dateofbirth_edittext"
        android:layout_below="@+id/dateofbirth"
        android:layout_marginTop="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        android:hint="@string/date_of_birth"
        android:textColorHint="@color/bg_white"
        android:backgroundTint="@color/bg_white"
        android:textSize="14dp">

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:text="@string/e_mail"
        android:textSize="15dp"
        android:textColor="@color/bg_white"
        android:layout_below="@+id/dateofbirth_edittext"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="20dp">

    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_edittext"
        android:layout_below="@+id/email"
        android:layout_marginTop="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        android:hint="@string/enter_email"
        android:textColorHint="@color/bg_white"
        android:backgroundTint="@color/bg_white"
        android:textSize="14dp"
        >

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:text="@string/password"
        android:textSize="15dp"
        android:textColor="@color/bg_white"
        android:layout_below="@+id/email_edittext"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="20dp"
        >

    </TextView>

    <RelativeLayout
        android:id="@+id/password_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp">

        <EditText
            android:id="@+id/password_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_password"
            android:textColorHint="@color/bg_white"
            android:textColor="@color/bg_white"
            android:inputType="textPassword"
            android:backgroundTint="@color/bg_white"

            android:textSize="14dp"
            android:paddingEnd="40dp">

        </EditText>
        <ImageView
            android:id="@+id/eye_icon"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/eye"
            android:layout_marginRight="5dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

        </ImageView>
    </RelativeLayout>

    <Button
        android:id="@+id/create_account_btn"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:text="@string/create_an_account"
        android:textSize="15dp"
        android:textColor="@color/bg_white"
        android:backgroundTint="#E09F9F"
        android:layout_below="@id/password_container"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="15dp"
        android:enabled="false"
        app:cornerRadius="15dp"
        android:alpha="0.6">


    </Button>

</RelativeLayout>