<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/page12_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".YouNotificationsActivity"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/page12_tab_section"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/page12_tab_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvFollowing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Following"
                android:textColor="@color/create_account_orange_dark"
                android:textSize="17sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tvYou"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="You"
                android:textColor="@color/create_account_orange_dark"
                android:textSize="17sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp" />

        </LinearLayout>


        <View
            android:id="@+id/page12_you_active_indicator"
            android:layout_width="240dp"
            android:layout_height="3dp"
            android:layout_marginStart="200dp"

            android:background="@color/create_account_orange_dark" />

        <RelativeLayout
            android:id="@+id/page12_tab_indicators"
            android:layout_width="match_parent"
            android:layout_height="3dp">

            <View
                android:id="@+id/page12_tab_background_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey" />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/page12_follow_requests_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="12dp">

        <TextView
            android:id="@+id/page12_follow_requests_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follow Requests"
            android:textColor="@color/create_account_orange_dark"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp" />

        <View
            android:id="@+id/page12_header_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"
            android:layout_marginTop="8dp" />

    </LinearLayout>


    <ScrollView
        android:id="@+id/page12_activity_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:id="@+id/page12_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/page12_new_section_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/page12_new_activity_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:focusable="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/page12_karennne_profile"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/img_5"
                    app:civ_border_color="#DD2A7B"
                    app:civ_border_width="2dp" />

                <LinearLayout
                    android:id="@+id/page12_new_text_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/page12_karennne_activity_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="karennne liked your photo."
                        android:textSize="14sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/page12_karennne_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1h"
                        android:textSize="12sp"
                        android:textColor="#606060"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/page12_karennne_liked_post"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/img_9"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="8dp" />

            </LinearLayout>


            <TextView
                android:id="@+id/page12_today_section_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />


            <LinearLayout
                android:id="@+id/page12_today_activity_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:id="@+id/page12_multiple_profiles_container"
                    android:layout_width="44dp"
                    android:layout_height="44dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/page12_kiero_profile"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="start|top"
                        android:src="@drawable/img_7"
                        app:civ_border_color="#FFFFFF"
                        app:civ_border_width="2dp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/page12_zackjohn_profile"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="end|bottom"
                        android:src="@drawable/img_8"
                        app:civ_border_color="#FFFFFF"
                        app:civ_border_width="2dp" />

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/page12_today_text_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/page12_multiple_likes_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kiero_d, zackjohn and 26 others liked your photo."
                        android:textSize="14sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/page12_multiple_likes_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3h"
                        android:textSize="12sp"
                        android:textColor="#606060"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/page12_multiple_likes_post"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/img_9"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- This Week Section -->
            <TextView
                android:id="@+id/page12_week_section_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This Week"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <!-- Comment Mention Item -->
            <LinearLayout
                android:id="@+id/page12_comment_mention_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:focusable="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/page12_craig_love_profile"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/img_8"
                    app:civ_border_color="#DD2A7B"
                    app:civ_border_width="2dp" />

                <LinearLayout
                    android:id="@+id/page12_comment_content_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/page12_comment_mention_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="craig_love mentioned you in a comment: @jacob_w exactly.."
                        android:textSize="14sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/page12_comment_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2d"
                        android:textSize="12sp"
                        android:textColor="#606060"
                        android:layout_marginTop="2dp" />

                    <LinearLayout
                        android:id="@+id/page12_comment_actions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/page12_heart_like_reaction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="❤"
                            android:textSize="16sp"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/page12_reply_action_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reply"
                            android:textColor="#606060"
                            android:textSize="14sp"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/page12_comment_post_image"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/img_9"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/page12_martini_follow_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/page12_martini_rond_profile"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/img_6"
                    app:civ_border_color="#DD2A7B"
                    app:civ_border_width="2dp" />

                <LinearLayout
                    android:id="@+id/page12_martini_text_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/page12_martini_follow_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="martini_rond started following you."
                        android:textSize="14sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/page12_martini_follow_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3d"
                        android:textSize="12sp"
                        android:textColor="#606060"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/page12_martini_message_btn"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:backgroundTint="#EEEEEE"
                    android:text="Message"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:paddingHorizontal="16dp"
                    app:cornerRadius="6dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/page12_max_follow_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:focusable="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/page12_maxjacobson_profile"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/img_7"
                    app:civ_border_color="#DD2A7B"
                    app:civ_border_width="2dp" />

                <LinearLayout
                    android:id="@+id/page12_max_text_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/page12_max_follow_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="maxjacobson started following you."
                        android:textSize="14sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/page12_max_follow_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3d"
                        android:textSize="12sp"
                        android:textColor="#606060"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/page12_max_message_btn"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:backgroundTint="#EEEEEE"
                    android:text="Message"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:paddingHorizontal="16dp"
                    app:cornerRadius="6dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/page12_potter_follow_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:focusable="true">



                <LinearLayout
                    android:id="@+id/page12_potter_text_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/page12_potter_follow_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mis_potter started following you."
                        android:textSize="14sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/page12_potter_follow_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3d"
                        android:textSize="12sp"
                        android:textColor="#606060"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/page12_potter_follow_btn"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:backgroundTint="@color/create_account_orange_dark"
                    android:text="Follow"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:paddingHorizontal="16dp"
                    app:cornerRadius="6dp" />

            </LinearLayout>


            <TextView
                android:id="@+id/page12_month_section_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This Month"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/page12_month_follow_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:focusable="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/page12_month_user_profile"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/img_2"
                    app:civ_border_color="#DD2A7B"
                    app:civ_border_width="2dp" />

                <LinearLayout
                    android:id="@+id/page12_month_text_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/page12_month_follow_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="another_user started following you."
                        android:textSize="14sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/page12_month_follow_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2w"
                        android:textSize="12sp"
                        android:textColor="#606060"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/page12_month_follow_btn"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:backgroundTint="@color/create_account_orange_dark"
                    android:text="Follow"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:paddingHorizontal="16dp"
                    app:cornerRadius="6dp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bottom_margin"
                android:layout_marginBottom="10dp"

                >

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation_buttons"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_white"
        android:layout_marginBottom="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/white_line3"
            android:src="@drawable/white_line"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="0dp"
            android:layout_alignParentTop="true"
            >

        </ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_navigation_buttons_container"
            android:layout_below="@+id/white_line3"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/home_button"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/home_not_filled"

                >

            </ImageView>


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/search_button"
                android:layout_toRightOf="@+id/home_button"
                android:src="@drawable/search_icon"
                android:layout_marginLeft="40dp"

                >

            </ImageView>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:id="@+id/add_post_btn"
                android:layout_centerInParent="true"
                android:src="@drawable/add_post"

                >

            </ImageView>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/likes"
                android:layout_toLeftOf="@+id/my_account_container"
                android:src="@drawable/like_filled"
                android:layout_marginRight="40dp"
                >

            </ImageView>

            <androidx.cardview.widget.CardView
                android:id="@+id/my_account_container"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="50dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false">
                <ImageView
                    android:id="@+id/my_account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/my_account"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>





        </RelativeLayout>

    </RelativeLayout>




</LinearLayout>